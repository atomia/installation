<resourceDescription xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <bindings xdt:Locator="XPath(//bindings[moduleList/module/@name='Atomia.Provisioning.Modules.PureFTPD.PureFTPD'])">
    <resourceList>
      <resource name="PureFTPD" xdt:Transform="Insert">
        <property name="DatabaseHost"><%= @pureftpd_master_ip %></property>
        <property name="DatabaseName">pureftpd</property>
        <property name="Username"><%= @pureftpd_agent_user %></property>
        <property name="Password"><%= @pureftpd_agent_password %></property>
        <property name="EncryptionMethod">md5</property>
        <property name="ClusterIpAddress"><%= @ftp_cluster_ip %></property>
        <property name="FileSystemAgentUrl">http://<%= @fs_agent_ip %>:10201/</property>
        <property name="FileSystemAgentUsername"><%= @fs_agent_user %></property>
        <property name="FileSystemAgentPassword"><%= @fs_agent_password %></property>
        <property name="StorageRoot"><%= @atomia_web_content_mount_point %></property>
      </resource>
    </resourceList>
  </bindings>
</resourceDescription>
